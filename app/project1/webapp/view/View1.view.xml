<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <m:Page
        id="page"
        title="Reports Dashboard"
        enableScrolling="true"
        showHeader="false"
    >
        <m:content>
<!-- Filter Bar -->
            <m:HBox
                id="filterBar"
                class="sapUiSmallMarginTop customFilterBarBg"
                alignItems="Center"
                justifyContent="SpaceBetween"
            >
                <l:VerticalLayout
                    class="sapUiContentPadding"
                    width="100%"
                >
                    <m:MultiInput
                        id="productInput"
                        placeholder="Enter Packaging Site Code"
                        showSuggestion="false"
                        suggestionItems="{/ProductCollection}"
                        showClearIcon="true"
                        valueHelpRequest=".onProductInputClick"
                        width="280px"
                    >
                        <m:suggestionItems>
                            <core:Item text="{Name}" />
                        </m:suggestionItems>
                    </m:MultiInput>
                </l:VerticalLayout>

                <m:HBox alignItems="Center">
                    <m:Label
                        text="From Date:"
                        class="sapUiSmallMarginEnd"
                    />
                    <m:DatePicker
                        id="fromDate"
                        width="130px"
                        placeholder="dd/mm/yyyy"
                        displayFormat="dd/MM/yyyy"
                        valueFormat="yyyy-MM-dd"
                        change=".onFromDateChange"
                    />

                    <m:Label
                        text="To Date:"
                        class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                    />
                    <m:DatePicker
                        id="toDate"
                        width="130px"
                        placeholder="dd/mm/yyyy"
                        displayFormat="dd/MM/yyyy"
                        valueFormat="yyyy-MM-dd"
                        change=".onToDateChange"
                    />

                    <m:Button
                        text="Go"
                        press=".onFilterGo"
                        type="Emphasized"
                        class="sapUiSmallMarginBegin"
                    />
                    <m:Button
                        text="Reset"
                        press=".onFilterReset"
                        type="Reject"
                        class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                    />
                </m:HBox>
            </m:HBox>

<!-- Icons Tab Bar -->
            <m:IconTabBar
                id="cardsRow"
                select=".onIconTabSelect"
                class="sapUiResponsiveContentPadding sapUiSmallMarginBottom"
                visible="true"
                headerMode="Standard"
                expandable="false"
            >
                <m:items>
                    <m:IconTabFilter
                        key="summary"
                        icon="sap-icon://business-objects-experience"
                        text="Packaging and Release Site Summary Report"
                        design="Horizontal"
                    />

                    <m:IconTabFilter
                        key="track"
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="Track Wise Report"
                        design="Horizontal"
                    />

                    <m:IconTabFilter
                        key="audit"
                        icon="sap-icon://inspect"
                        iconColor="Critical"
                        text="Audit Trail Report"
                        design="Horizontal"
                    />

                    <m:IconTabFilter
                        key="activity"
                        icon="sap-icon://activity-items"
                        iconColor="Neutral"
                        text="Packaging and Release Site Activity"
                        design="Horizontal"
                    />
                </m:items>
            </m:IconTabBar>

<!-- Summary Filters Logic -->
            <m:VBox
                id="summaryFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin icons"
                visible="false"
            >
                <m:HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    class="sapUiTinyMarginBottom"
                >
                    <m:HBox
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <m:Label
                            text="Batch No:"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filterbatchNo"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />

                        <m:Label
                            text="Component Code:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filtercompCode"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />

                        <m:Label
                            text="Packaging Site:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filterpkgSite"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />

                        <m:Label
                            text="Created By:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filtercreatedBy"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />
                    </m:HBox>

                    <!-- Summary Buttons -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="End"
                    >
                        <m:Button
                            text="Add Filter"
                            icon="sap-icon://add-filter"
                            press=".onAddFilterPress"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                        <m:Button
                            text="Reset"
                            type="Reject"
                            press=".onSummaryFilterReset"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                    </m:HBox>
                </m:HBox>
                <!-- Summary Dynamic filters rows -->
                <m:VBox id="filterRows" />
            </m:VBox>

<!-- Track Filters Logic -->
            <m:VBox
                id="trackFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin icons"
                visible="false"
            >
                <m:HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    class="sapUiTinyMarginBottom"
                >
                    <m:HBox
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <m:Label
                            text="Packging Site Component Code:"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackPackgingSiteComponentCode"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />

                        <m:Label
                            text="Batch No. of First Packaging:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackBatchNoOfFirstPackaging"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />

                        <m:Label
                            text="Batch No. of First Release:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackBatchNoOfFirstRelease"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />
                    </m:HBox>

                    <!-- Track Buttons -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="End"
                    >
                        <m:Button
                            text="Add Filter"
                            icon="sap-icon://add-filter"
                            press=".onTrackAddFilter"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                        <m:Button
                            text="Reset"
                            type="Reject"
                            press=".onTrackFilterReset"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                    </m:HBox>
                </m:HBox>

                <!-- Track Dynamic filters rows -->
                <m:VBox id="trackFilterRows" />
            </m:VBox>


<!-- Audit Filter Logic -->
            <m:VBox
                id="auditFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin"
                visible="false"
            >
                <m:HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                >
                    <!-- Default Filters Row (4 filters) -->
                    <m:HBox
                        id="auditDefaultRow"
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <m:Label
                            text="Batch No:"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="auditBatchNo"
                            width="150px"
                            liveChange=".onAuditFilter"
                        />

                        <m:Label
                            text="Componant Code:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="auditCompCode"
                            width="150px"
                            liveChange=".onAuditFilter"
                        />

                        <m:Label
                            text="Created By:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="auditCreatedBy"
                            width="150px"
                            liveChange=".onAuditFilter"
                        />

                        <m:Label
                            text="Modified By:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="auditModifiedBy"
                            width="150px"
                            liveChange=".onAuditFilter"
                        />
                    </m:HBox>

                    <!-- Audit Buttons -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="End"
                    >
                        <m:Button
                            text="Add Filter"
                            icon="sap-icon://add-filter"
                            press=".onAuditAddFilter"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                        <m:Button
                            text="Reset"
                            type="Reject"
                            press=".onAuditFilterReset"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                    </m:HBox>
                </m:HBox>

                <!-- Audit Dynamic filters rows -->
                <m:VBox id="auditFilterRows" />
            </m:VBox>

<!-- Activity Filters Logic -->
            <m:HBox
                id="activityFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin icons"
                visible="false"
                alignItems="Center"
                justifyContent="Start"
            >
                <m:Label
                    text="Packaging Site ID:"
                    class="sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activityPkgSite"
                    width="120px"
                    liveChange=".onActivityFilter"
                />

                <m:Label
                    text="User:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activityCreatedBy"
                    width="120px"
                    liveChange=".onActivityFilter"
                />

                <m:Label
                    text="Last Activity Date:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:DatePicker
                    id="activityLastActivityDate"
                    width="150px"
                    valueFormat="dd/MM/yyyy"
                    displayFormat="dd/MM/yyyy"
                    change=".onActivityFilter"
                />

                <m:Label
                    text="Today Date:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:DatePicker
                    id="activityTodayDate"
                    width="150px"
                    valueFormat="dd/MM/yyyy"
                    displayFormat="dd/MM/yyyy"
                    change=".onActivityFilter"
                />

                <m:Label
                    text="Days From Today:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activityDaysFromToday"
                    type="Number"
                    width="80px"
                    liveChange=".onActivityFilter"
                />

                <m:Button
                    text="Reset"
                    type="Reject"
                    class="sapUiTinyMarginBegin"
                    press=".onActivityFilterReset"
                />
            </m:HBox>

<!-- Table hidden initially -->
            <m:VBox
                id="tableContainer"
                class="sapUiSmallMarginTop sapUiSmallMarginButtom icons"
            />

        </m:content>
    </m:Page>
</mvc:View>
